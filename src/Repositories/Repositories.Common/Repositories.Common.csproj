<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <Authors>Jared Barneck (Rhyous)</Authors>
    <Company>Rhyous Publishing LLC</Company>
    <ProjectGuid>{4952293D-0EEC-4772-8854-4FE0F818CC92}</ProjectGuid>
    <RootNamespace>Rhyous.EntityAnywhere.Repositories</RootNamespace>
    <AssemblyName>Rhyous.EntityAnywhere.Repositories.Common</AssemblyName>
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
    <Version>2.0.0</Version>
  </PropertyGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="SET proj=$(ProjectName)&#xD;&#xA;SET plugin=%25proj:*.=%25&#xD;&#xA;ECHO plugin = %25plugin%25&#xD;&#xA;SET copyToDir=&quot;$(SolutionDir)WebServices\WebServices.Main\Plugins\Repositories\%25plugin%25&quot;&#xD;&#xA;ECHO %25copyToDir%25&#xD;&#xA;IF NOT EXIST %25copyToDir%25 MKDIR %25copyToDir%25&#xD;&#xA;COPY /Y &quot;$(TargetPath)&quot; %25copyToDir%25&#xD;&#xA;COPY /Y &quot;$(TargetDir)$(TargetName).pdb&quot; %25copyToDir%25&#xD;&#xA;&#xD;&#xA;REM These dlls need to go to SharedBin&#xD;&#xA;SET dllDir=&quot;$(SolutionDir)WebServices\WebServices.Main\SharedBin&quot;&#xD;&#xA;ECHO %25dllDir%25&#xD;&#xA;IF NOT EXIST %25dllDir%25 MKDIR %25dllDir%25&#xD;&#xA;COPY /Y &quot;$(TargetDir)EntityFramework.dll&quot; %25dllDir%25&#xD;&#xA;COPY /Y &quot;$(TargetDir)EntityFramework.SqlServer.dll&quot; %25dllDir%25&#xD;&#xA;COPY /Y &quot;$(TargetDir)LinqKit.dll&quot; %25dllDir%25&#xD;&#xA;" />
  </Target>

  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Configuration" />
    <Reference Include="System.Core" />
    <Reference Include="System.ServiceModel.Web" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Xml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Interfaces\Interfaces.Authentication\Interfaces.Authentication.csproj" />
    <ProjectReference Include="..\..\Interfaces\Interfaces.Common\Interfaces.Common.csproj" />
    <ProjectReference Include="..\..\Interfaces\Interfaces.Services\Interfaces.Services.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="6.2.0" />
    <PackageReference Include="EntityFramework" Version="6.3.0" />
    <PackageReference Include="LINQKit" Version="1.1.17" />
    <PackageReference Include="Rhyous.Collections" Version="1.2.3" />
    <PackageReference Include="Rhyous.SimplePluginLoader.Autofac" Version="1.5.30" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.7.0" />
  </ItemGroup>

</Project>