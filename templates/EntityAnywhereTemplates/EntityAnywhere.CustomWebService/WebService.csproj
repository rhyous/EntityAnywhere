<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>$targetframeworkversion$</TargetFramework>
    <RootNamespace>Rhyous.WebFramework.WebServices</RootNamespace>
    <AssemblyName>Rhyous.WebFramework.WebServices.$Entity$</AssemblyName>
    <Product>WebServices.User</Product>
    <Copyright>Copyright Â©  2018</Copyright>
    <OutputPath>bin\$(Configuration)\</OutputPath>
  </PropertyGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="SET proj=$(ProjectName)
SET entity=%proj:*.=%
ECHO entity = %entity%
SET copyToDir=&quot;$(SolutionDir)WebServices\WebServices.Main\Plugins\WebServices\%entity%&quot;
ECHO %25copyToDir%25
IF NOT EXIST %25copyToDir%25 MKDIR %25copyToDir%25
COPY /Y &quot;$(TargetPath)&quot; %25copyToDir%25
COPY /Y &quot;$(TargetDir)$(TargetName).pdb&quot; %25copyToDir%25

SET dllDir=&quot;%copyToDir%\bin&quot;
ECHO %dllDir%
IF NOT EXIST %dllDir% MKDIR %dllDir%
FOR %%X in (&quot;$(Targetdir)*.dll&quot;) DO (
IF NOT &quot;%%X&quot;==&quot;$(TargetPath)&quot; COPY /Y &quot;%%X&quot; %dllDir%
)
FOR %%X in (&quot;$(Targetdir)*.pdb&quot;) DO (
IF NOT &quot;%%X&quot;==&quot;$(TargetDir)$(TargetName).pdb&quot; COPY /Y &quot;%%X&quot; %dllDir%" />
  </Target>

  <Import Project="..\..\..\Imports\netstandard\Rhyous.Odata.Csdl.Import.csproj" />

  <ItemGroup>
    <Reference Include="System.ServiceModel" />
    <Reference Include="System.ServiceModel.Web" />
    <Reference Include="System.Web.Services" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\Interfaces\Interfaces.Common\Interfaces.Common.csproj" />
    <ProjectReference Include="..\..\..\Interfaces\Interfaces.Services\Interfaces.Services.csproj" />
    <ProjectReference Include="..\..\..\Misc\Attributes.Common\Attributes.Common.csproj" />
    <ProjectReference Include="..\..\..\Misc\Attributes.Wcf\Attributes.Wcf.csproj" />
    <ProjectReference Include="..\..\..\Services\Services.Common\Services.Common.csproj" />
    <ProjectReference Include="..\..\WebServices.Common\WebServices.Common.csproj" />
    <ProjectReference Include="..\..\WebServices.Wcf\WebServices.Wcf.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Rhyous.SimplePluginLoader" Version="1.4.0" />
    <PackageReference Include="Rhyous.SimplePluginLoader.Autofac" Version="1.0.3" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="System.Data.DataSetExtensions" Version="4.5.0" />
  </ItemGroup>
</Project>